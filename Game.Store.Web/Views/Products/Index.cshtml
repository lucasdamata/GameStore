@model IEnumerable<Game.Store.Web.ViewModels.Product.ProductIndexViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="row">
    <div class="col-md-10">
        <input type="text"
           id="pesquisaAlbum"
           class="form-control"
           onkeypress="searchOnEnter(event)"
        />
    </div>
    <div class="col-md-2">
        <button
            class="btn btn-primary"
            id="btnPesquisarAlbum"
            onclick="search()"
        >
            Pesquisar
        </button>
    </div>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QuantityInStock)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuantityInStock)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>


@section Scripts{
    <script type="text/javascript">
        function searchOnEnter(event) {
            if (event.keyCode === 13) {
                search()
            }
        }

        function search() {
            var searchValue = $("#pesquisaAlbum").val()
            $.ajax({
                method: 'GET',
                url: `/Product/FiltrarPorNome?pesquisa=${searchValue}`,
                success: function (data) {
                    $("#tblAlbuns tbody > tr").remove()
                    $.each(data, function (index, item) {
                        console.log(item)
                        $("#tblAlbuns tbody").append(
                            `
                                <tr>
                                    <td>${item.Name}</td>
                                    <td>${item.Description}</td>
                                    <td>${item.Price}</td>
                                    <td>${item.QuantityInStock}</td>
                                    <td>
                                        <a href="/Product/Edit/${item.Id}">Editar</a> |
                                        <a href="/Product/Details/${item.Id}">Detalhar</a> |
                                        <a href="/Product/Delete/${item.Id}">Excluir</a>
                                    </td>
                                </tr>
                            `
                        )
                    })
                },
                error: function (e) {
                    console.log('Ocorreu um erro -> ', e)
                }
            })
        }
    </script>
}